# ============================================================================
# E2E TEST ENVIRONMENT VARIABLES
# Copy this file to .env.e2e and fill in your actual values
# ============================================================================

# ============================================================================
# COMMON SETTINGS
# ============================================================================
NODE_ENV=test

# ============================================================================
# POSTGRES DATABASE (E2E)
# ============================================================================
POSTGRES_DB=corely_e2e
POSTGRES_USER=corely
POSTGRES_PASSWORD=corely
DATABASE_URL=postgresql://corely:corely@postgres:5432/corely_e2e?schema=public

# ============================================================================
# REDIS CACHE & QUEUE (E2E)
# ============================================================================
REDIS_URL=redis://redis:6379

# ============================================================================
# FRONTEND (VITE) - E2E
# ============================================================================
VITE_API_BASE_URL=http://localhost:3000

# ============================================================================
# PORTS (E2E uses different ports to avoid conflicts)
# ============================================================================
WEB_PORT=5173
API_PORT=3000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# SECURITY
# ============================================================================
TEST_HARNESS_SECRET=test-secret-key
JWT_SECRET=test-jwt-secret-change-me

# ============================================================================
# AI PROVIDERS (E2E)
# ============================================================================
# Set provider: openai | anthropic
AI_MODEL_PROVIDER=openai
# Default model IDs (override per env if needed)
AI_MODEL_ID=gpt-4o-mini
# OpenAI API key (can be dummy for e2e if not testing AI features)
OPENAI_API_KEY=dummy-key-for-e2e
# Anthropic API key
ANTHROPIC_API_KEY=dummy-key-for-e2e

# ============================================================================
# EMAIL PROVIDERS (E2E)
# ============================================================================
# Select provider: resend | sendgrid | ses | postmark (only resend implemented)
EMAIL_PROVIDER=resend
RESEND_API_KEY=
RESEND_FROM="Corely E2E <hadoan.xyz@gmail.com>"
RESEND_REPLY_TO=
RESEND_WEBHOOK_SECRET=

# ============================================================================
# OBJECT STORAGE (E2E)
# ============================================================================
STORAGE_PROVIDER=gcs
STORAGE_BUCKET=uploads-e2e
STORAGE_KEY_PREFIX=env/e2e
SIGNED_URL_UPLOAD_TTL_SECONDS=600
SIGNED_URL_DOWNLOAD_TTL_SECONDS=600
MAX_UPLOAD_BYTES=52428800
# Optional Google credentials (can be empty for e2e)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=
