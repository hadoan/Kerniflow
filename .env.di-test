# ============================================================================
# DI Integration Test Environment
# Used by docker-compose.di-test.yml
# ============================================================================

# ============================================================================
# DATABASE (Test instance on different port)
# ============================================================================
POSTGRES_DB=kerniflow
POSTGRES_USER=kerniflow
POSTGRES_PASSWORD=kerniflow
DATABASE_URL=postgresql://kerniflow:kerniflow@localhost:5433/kerniflow?schema=public

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=test

# ============================================================================
# API
# ============================================================================
API_PORT=3000

# ============================================================================
# REDIS (Test instance on different port)
# ============================================================================
REDIS_URL=redis://localhost:6380

# ============================================================================
# JWT / AUTHENTICATION (Test values)
# ============================================================================
JWT_ACCESS_SECRET=test-access-secret-for-di-tests
JWT_REFRESH_SECRET=test-refresh-secret-for-di-tests
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# EMAIL (Mock provider for tests)
# ============================================================================
EMAIL_PROVIDER=resend
RESEND_API_KEY=test_key
RESEND_FROM="Test <test@example.com>"
RESEND_REPLY_TO=
RESEND_WEBHOOK_SECRET=test_webhook
