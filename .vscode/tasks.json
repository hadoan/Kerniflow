{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build API",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "@corely/api", "build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start API (Debug Mode)",
      "type": "shell",
      "command": "node",
      "args": ["--inspect=9229", "dev.mjs"],
      "options": {
        "cwd": "${workspaceFolder}/services/api"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting server",
          "endsPattern": "listening on"
        }
      }
    }
  ]
}
