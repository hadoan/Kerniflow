{
  "extends": "@kerniflow/tsconfig/react.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["./src/types/custom-modules"],
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    /* Linting - relaxed for gradual migration */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "exactOptionalPropertyTypes": false,

    "baseUrl": "..",
    "paths": {
      "@/*": ["web/src/*"],
      "@kerniflow/api-client": ["packages/api-client/src/index.ts"],
      "@kerniflow/offline-core": ["packages/offline-core/src/index.ts"],
      "@kerniflow/offline-web": ["packages/offline-web/src/index.ts"]
    }
  },
  "include": ["src"]
}
