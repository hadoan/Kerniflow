{
  "name": "kerniflow",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=22.19.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm build:packages && pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter '@kerniflow/kernel' --filter '@kerniflow/contracts' --filter '@kerniflow/domain' --filter '@kerniflow/data' build",
    "typecheck": "pnpm -r typecheck",
    "dev:web": "pnpm --filter @kerniflow/web dev",
    "dev:api": "pnpm build:packages && pnpm --filter @kerniflow/api dev",
    "dev:worker": "pnpm --filter @kerniflow/worker dev",
    "prisma:generate": "pnpm --filter @kerniflow/data exec prisma generate",
    "prisma:migrate": "pnpm --filter @kerniflow/data exec prisma migrate dev",
    "migrate": "pnpm --filter @kerniflow/data exec tsx --env-file=../../.env ../../../node_modules/.bin/prisma migrate dev",
    "format": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm lint && pnpm typecheck",
    "e2e:api:up": "docker compose -f docker-compose.e2e.yml up -d api",
    "e2e:up": "docker compose -f docker-compose.e2e.yml up -d --build",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e": "pnpm --filter @kerniflow/e2e e2e",
    "e2e:ui": "pnpm --filter @kerniflow/e2e e2e:ui",
    "e2e:report": "pnpm --filter @kerniflow/e2e e2e:report",
    "e2e:ci": "pnpm e2e:up && pnpm e2e && pnpm e2e:down",
    "test": "vitest run --workspace ./vitest.workspace.ts",
    "test:watch": "vitest --workspace ./vitest.workspace.ts --watch",
    "coverage": "vitest run --workspace ./vitest.workspace.ts --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.19.3",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsdown": "^0.18.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "tsconfig-paths": "^4.2.0"
  }
}
