{
  "name": "kerniflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=22.19.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm build:packages && pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/config' --filter './packages/kernel' --filter './packages/contracts' --filter './packages/domain' --filter './packages/data' --filter './packages/offline-core' --filter './packages/offline-web' --filter './packages/offline-rn' --filter './packages/testkit' build",
    "typecheck": "pnpm -r typecheck",
    "dev:web": "pnpm --filter @kerniflow/web dev",
    "dev:api": "pnpm build:packages && pnpm --filter @kerniflow/api dev",
    "dev:worker": "pnpm --filter @kerniflow/worker dev",
    "prisma:generate": "pnpm --filter @kerniflow/data exec prisma generate",
    "prisma:migrate": "pnpm --filter @kerniflow/data exec prisma migrate dev",
    "migrate": "pnpm --filter @kerniflow/data exec tsx --env-file=../../.env ../../../node_modules/.bin/prisma migrate dev",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm lint && pnpm typecheck",
    "e2e:api:up": "docker compose -f docker-compose.e2e.yml up -d api",
    "e2e:up": "docker compose -f docker-compose.e2e.yml up -d --build",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e": "pnpm --filter @kerniflow/e2e e2e",
    "e2e:ui": "pnpm --filter @kerniflow/e2e e2e:ui",
    "e2e:report": "pnpm --filter @kerniflow/e2e e2e:report",
    "e2e:ci": "pnpm e2e:up && pnpm e2e && pnpm e2e:down",
    "test": "vitest run --workspace ./vitest.workspace.ts",
    "test:unit": "vitest run --workspace ./vitest.workspace.ts \"**/*.test.ts\" \"**/*.spec.ts\"",
    "test:int": "vitest run --workspace ./vitest.workspace.ts services/api/src/modules/expenses/__tests__/expenses.int.test.ts services/api/src/shared/__tests__/idempotency.int.test.ts services/worker/src/modules/outbox/__tests__/outbox.int.test.ts",
    "test:api": "vitest run --workspace ./vitest.workspace.ts services/**/__tests__/*.api.test.ts",
    "test:contract": "vitest run --workspace ./vitest.workspace.ts services/**/__tests__/*.contract.test.ts",
    "test:adapters": "vitest run --workspace ./vitest.workspace.ts services/**/__tests__/*.adapter.test.ts",
    "test:ui": "vitest run --workspace ./vitest.workspace.ts \"**/*.component.test.tsx\" \"**/*.component.test.ts\"",
    "test:all": "vitest run --workspace ./vitest.workspace.ts",
    "test:watch": "vitest --workspace ./vitest.workspace.ts --watch",
    "coverage": "vitest run --workspace ./vitest.workspace.ts --coverage"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "ts-node": "catalog:",
    "tsconfig-paths": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
